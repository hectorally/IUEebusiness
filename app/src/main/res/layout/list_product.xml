<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_margin="5dp"
    android:id="@+id/reclaclik">
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="144dp"
        android:layout_height="109dp"
        android:background="@color/white"
        android:elevation="8dp"
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true">

        <ImageView
            android:id="@+id/rImageViewprod"
            android:layout_width="150dp"
            android:layout_height="111dp"
            android:background="@color/white"

            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/idNameprod"
        android:layout_width="232dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="false"
        android:layout_marginStart="169dp"
        android:layout_marginLeft="169dp"
        android:textColor="@color/purple_200"

        android:textSize="15dp" />
    <TextView
        android:id="@+id/idpriceprod"
        android:layout_width="232dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="false"
        android:layout_marginStart="169dp"
        android:layout_marginLeft="169dp"
        android:layout_below="@+id/idNameprod"
        android:textColor="@color/purple_200"
        android:textSize="15dp" />
    <TextView
        android:id="@+id/idsizeprod"
        android:layout_width="232dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="false"
        android:layout_marginStart="169dp"
        android:layout_marginLeft="169dp"
        android:layout_below="@+id/idpriceprod"
        android:textColor="@color/purple_200"
        android:textSize="15dp" />
    <TextView
        android:id="@+id/iddescriptprod"
        android:layout_width="232dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="false"
        android:layout_marginStart="169dp"
        android:layout_marginLeft="169dp"
        android:layout_below="@+id/idsizeprod"

        android:textColor="@color/purple_200"
        android:textSize="15dp" />

</RelativeLayout>