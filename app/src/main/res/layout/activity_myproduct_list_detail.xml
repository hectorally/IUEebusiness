<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    app:cardBackgroundColor="@color/cardview_dark_background"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    android:layout_gravity="center"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

tools:context=".MyproductListDetail">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/white"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:elevation="8dp"
            app:cardCornerRadius="8dp"

            app:cardUseCompatPadding="true">


            <ImageView
                android:id="@+id/rImageViewprodlist"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@color/white"
                />
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/idNameprodlist"
            android:layout_width="232dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:textColor="@color/purple_200"
            android:layout_marginBottom="5dp"
            android:textStyle="bold"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/idpriceprodlist"
            android:layout_width="232dp"
            android:layout_height="30dp"
           android:layout_gravity="center"
            android:layout_below="@+id/idNameprodlist"
            android:layout_marginBottom="5dp"
            android:textColor="@color/purple_200"
            android:textStyle="bold"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/idsizeprodlist"
            android:layout_width="232dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/idpriceprodlist"
            android:textColor="@color/purple_200"
            android:textStyle="bold"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/iddescriptprodlist"
            android:layout_width="232dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/idsizeprodlist"
            android:textStyle="bold"
            android:textColor="@color/purple_200"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/idintrotowhtasapp"
            android:layout_width="232dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/idsizeprodlist"
            android:textStyle="bold"
            android:text="Write on whatsapp to oder"

            android:textColor="@color/red"
            android:textSize="15dp" />

        <EditText
            android:id="@+id/edit_mobile_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Enter Mobile Number"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="16dp">
        </EditText>

        <EditText
            android:id="@+id/edit_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginTop="76dp"
            android:hint="Enter Message"
            android:inputType="text"
            app:layout_constraintTop_toBottomOf="@+id/edit_mobile_no"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="16dp">
        </EditText>
        <Button
            android:background="@android:color/holo_red_light"
            android:layout_margin="15dp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:id="@+id/button_send"
            android:text="Connect to Whatsapp Now "
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />




    </LinearLayout>

</androidx.cardview.widget.CardView>