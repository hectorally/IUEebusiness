<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/white"
android:layout_margin="5dp">
android:layout_width="match_parent"
android:gravity="center"
android:layout_height="wrap_content"
android:orientation="vertical"
tools:context=".MyproductListDetail">

<androidx.cardview.widget.CardView
    android:layout_width="144dp"
    android:layout_height="109dp"
    android:background="@color/white"
    android:elevation="8dp"
    app:cardCornerRadius="8dp"
    app:cardUseCompatPadding="true">

    <ImageView
        android:id="@+id/rImageViewprodlist"
        android:layout_width="150dp"
        android:layout_height="111dp"
        android:background="@color/white"

        />
</androidx.cardview.widget.CardView>

<TextView
    android:id="@+id/idNameprodlist"
    android:layout_width="232dp"
    android:layout_height="30dp"
    android:layout_alignParentStart="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="false"
    android:layout_marginStart="169dp"

    android:layout_marginLeft="169dp"

    android:textColor="@color/purple_200"
    android:textStyle="bold"
    android:textSize="15dp" />
<TextView
    android:id="@+id/idpriceprodlist"
    android:layout_width="232dp"
    android:layout_height="30dp"
    android:layout_alignParentStart="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="false"
    android:layout_marginStart="169dp"
    android:layout_marginLeft="169dp"
    android:layout_below="@+id/idNameprodlist"
    android:textColor="@color/purple_200"
    android:textStyle="bold"
    android:textSize="15dp" />
<TextView
    android:id="@+id/idsizeprodlist"
    android:layout_width="232dp"
    android:layout_height="30dp"
    android:layout_alignParentStart="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="false"
    android:layout_marginStart="169dp"
    android:layout_marginLeft="169dp"
    android:layout_below="@+id/idpriceprodlist"
    android:textColor="@color/purple_200"
    android:textStyle="bold"
    android:textSize="15dp" />
<TextView
    android:id="@+id/iddescriptprodlist"
    android:layout_width="232dp"
    android:layout_height="30dp"
    android:layout_alignParentStart="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="false"
    android:layout_marginStart="169dp"
    android:layout_marginLeft="169dp"
    android:layout_below="@+id/idsizeprodlist"
    android:textStyle="bold"
    android:textColor="@color/purple_200"
    android:textSize="15dp" />

</RelativeLayout>